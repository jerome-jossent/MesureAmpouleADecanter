<UserControl x:Class="MesureAmpouleADecanter_ScannerFibre.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesureAmpouleADecanter_ScannerFibre"
             
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <lvc:CartesianChart x:Name="LiveChart" LegendLocation="Right"
                    DisableAnimations="True"
                    Hoverable="False" DataTooltip="{x:Null}"
                    >
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding _chartValues}" 
                        Fill="Transparent"
                        PointGeometrySize="6"
                        StrokeThickness="1"
                        LineSmoothness="0"
                        />
                <lvc:LineSeries Values="{Binding _chartValuesDerivate}" 
                        Fill="Transparent"
                        PointGeometrySize="6"
                        StrokeThickness="1"
                        LineSmoothness="0"
                        />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis x:Name="_chart_AxeX"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis x:Name="_chart_AxeY"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
