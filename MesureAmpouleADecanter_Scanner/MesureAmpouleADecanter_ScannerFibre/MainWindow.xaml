<Window x:Class="MesureAmpouleADecanter_ScannerFibre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:MesureAmpouleADecanter_ScannerFibre"        
        
        xmlns:wpftk="http://schemas.xceed.com/wpf/xaml/toolkit"  
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"          
        xmlns:opencv="clr-namespace:OpenCvSharp;assembly=OpenCvSharp"
        
        mc:Ignorable="d"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Title="{Binding _title, UpdateSourceTrigger=PropertyChanged}" Height="900" Width="1200"
        
        KeyDown="_roi_sensor_KeyPress"
        >

    <Window.Resources>
        <local:InvertableBooleanToVisibilityConverter x:Key="_Converter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TabControl SelectedIndex="{Binding _tabindex}">

                <TabItem Header="Source">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton Grid.Row="0" Grid.Column="0" Content="Camera" VerticalContentAlignment="Center" Checked="SourceRadioButton_Change" x:Name="_rb_source_camera"  />
                        <RadioButton Grid.Row="1" Grid.Column="0" Content="Video file" VerticalContentAlignment="Center"  Checked="SourceRadioButton_Change" x:Name="_rb_source_videofile"  />

                        <!--MENU WEBCAM-->
                        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">

                            <ComboBox x:Name ="_cbx_webcam" MinWidth="150" Margin="5" SelectionChanged="_cbx_webcam_SelectionChanged"
                              VerticalContentAlignment="Center"/>

                            <ComboBox  MinWidth="150" Margin="5" 
                               x:Name="_cbx_webcam_format"          
                              ItemsSource="{Binding _webcam_formats}"
                              VerticalContentAlignment="Center"
                    SelectionChanged="_cbx_webcam_format_SelectionChanged"
                              SelectedValue="{Binding _webcam_format, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="Name"
                               >
                            </ComboBox>

                            <TextBlock Text="{Binding ElementName=_webcam_format, Path=Name, UpdateSourceTrigger=PropertyChanged}"/>

                            <!--<Image Margin="5" Source="/Images/folder.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
  MouseDown="OpenVideoFile_Click" />-->

                            <Grid Margin="5">
                                <Image Source="/Images/Lecture.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
                               MouseDown="btn_play_Click"/>
                                <Image Source="/Images/Pause.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
                               MouseDown="btn_pause_Click"/>
                            </Grid>

                            <Image Margin="5" Source="/Images/Settings.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="WebCamSettings_Show_Click" ToolTip="Menu : define region of interest" />

                            <!--<Image Margin="5" Source="/Images/crop.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="DefineROI_Click" ToolTip="Menu : define region of interest" />-->

                            <Image Margin="5" Source="/Images/load2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Sensors_Load_Click" ToolTip="Load"/>

                        </StackPanel>

                        <!--MENU VIDEO FILE-->
                        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">

                            <!--<Image Margin="5" Source="/Images/folder.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
  MouseDown="OpenVideoFile_Click" />-->

                            <Image Margin="5" Source="/Images/load2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="VideoFile_Select_Click" ToolTip="Select video file"/>

                            <Grid Margin="5">
                                <Image Source="/Images/Lecture.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
                               MouseDown="btn_play_Click"/>
                                <Image Source="/Images/Pause.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
                               MouseDown="btn_pause_Click"/>
                            </Grid>


                            <!--<Image Margin="5" Source="/Images/crop.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="DefineROI_Click" ToolTip="Menu : define region of interest" />-->


                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="ROIs">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <!--MENU-->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">

                                <Image Margin="5" Source="/Images/crop.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="DefineROI_Click" ToolTip="Menu : define region of interest" />

                            </StackPanel>

                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Sensors detection's" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--MENU-->
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

                            <Grid Margin="5">
                                <Image Source="/Images/Lecture.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                 Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
                             MouseDown="btn_play_Click"/>
                                <Image Source="/Images/Pause.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                 Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
                             MouseDown="btn_pause_Click"/>
                            </Grid>

                            <Image Margin="5" Source="/Images/Settings.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="WebCamSettings_Show_Click" ToolTip="Menu : define region of interest" />

                            <TextBlock Text="Detection (Hough Circles) :" VerticalAlignment="Center"/>
                            <Grid Margin="5">
                                <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _HoughCircle_Detection, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
          MouseDown="HoughCircle_Switch_Click"/>
                                <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _HoughCircle_Detection, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
          MouseDown="HoughCircle_Switch_Click"/>
                            </Grid>

                            <Image Margin="5" Source="/Images/new.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                           MouseDown="Sensors_Clear_Click" ToolTip="Clear all sensors"/>

                            <Image Margin="5" Source="/Images/save2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Sensors_Save_Click" ToolTip="Save"/>

                            <TextBlock Text="Sort Sensors :&#x0a;from up to down" VerticalAlignment="Center"/>

                            <Image Margin="5" Source="/Images/arrow_down.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="SortSensors_Up2Down_Click" ToolTip="Save"/>


                            <TextBlock Text="Show sensors" VerticalAlignment="Center"/>
                            <Grid Margin="5">
                                <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _sensors_display, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
          MouseDown="Sensors_display_Switch_Click"/>
                                <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _sensors_display, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
          MouseDown="Sensors_display_Switch_Click"/>
                            </Grid>

                            <Button Content="Reset MinMax of all sensors" Click="Sensors_ResetMinMax" />

                        </StackPanel>

                        <!--Hough circles parameters-->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="dp" />
                            <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="10" Value="{Binding _houghcircle_dp, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding _houghcircle_dp, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Grid.Row="1" Grid.Column="0" Content="param1" />
                            <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="300" Value="{Binding _houghcircle_param1, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding _houghcircle_param1, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Grid.Row="2" Grid.Column="0" Content="param2" />
                            <Slider Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="300" Value="{Binding _houghcircle_param2, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding _houghcircle_param2, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Grid.Row="3" Grid.Column="0" Content="Rayon min/max" />
                            <wpftk:RangeSlider Grid.Row="3" Grid.Column="1" Step="1"
                               LowerValue="{Binding _houghcircle_radius_min, UpdateSourceTrigger=PropertyChanged}"
                               HigherValue="{Binding _houghcircle_radius_max, UpdateSourceTrigger=PropertyChanged}" 
                               Minimum="0" Maximum="200"                               
                               />
                            <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal">
                                <Label  Content="{Binding _houghcircle_radius_min, UpdateSourceTrigger=PropertyChanged}" />
                                <Label  Content=" / " />
                                <Label  Content="{Binding _houghcircle_radius_max, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Experience Settings">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!--<Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">

                            <TextBlock Text="H max :"/>
                            
                            

                            -->
                        <!--<Image Margin="5" Source="/Images/folder.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
  MouseDown="OpenVideoFile_Click" />-->

                        <!--<Grid Margin="5">
                                <Image Source="/Images/Lecture.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
                               MouseDown="btn_play_Click"/>
                                <Image Source="/Images/Pause.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                   Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
                               MouseDown="btn_pause_Click"/>
                            </Grid>

                            <Image Margin="5" Source="/Images/Settings.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="WebCamSettings_Show_Click" ToolTip="Menu : define region of interest" />

                            <Image Margin="5" Source="/Images/crop.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
   MouseDown="DefineROI_Click" ToolTip="Menu : define region of interest" />-->
                        <!--

                            <Image Margin="5" Source="/Images/load2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Sensors_Load_Click" ToolTip="Load"/>

                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">

                            -->
                        <!--<Image Margin="5" Source="/Images/window_s_bar.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="LayoutSaveButton_Click" ToolTip="Save Windows positions"/>-->
                        <!--

                        </StackPanel>
                    </Grid>-->

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="H max :" />
                            <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="500" Value="{Binding _experience_h_max, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding _experience_h_max, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Grid.Row="1" Grid.Column="0" Content="H min :" />
                            <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="500" Value="{Binding _experience_h_min, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding _experience_h_min, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Grid.Row="2" Grid.Column="0" Content="DATA fenetre glissante :" />
                            <Slider Grid.Row="2" Grid.Column="1" Minimum="1" Maximum="20" Value="{Binding _ys_previous_window, UpdateSourceTrigger=PropertyChanged}" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding _ys_previous_window, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" />


                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">

                <Image Margin="5" Source="/Images/window_s_bar.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="LayoutSaveButton_Click" ToolTip="Save Windows positions"/>

            </StackPanel>
        </Grid>

        <!--VUES-->
        <xcad:DockingManager Grid.Row="1" x:Name="_DManager" MinHeight="20" AllowMixedOrientation="True" BorderBrush="Black" BorderThickness="0">
            <!--VUES DYNAMIQUES-->
            <xcad:LayoutRoot x:Name="_layoutRoot">
                <xcad:LayoutPanel x:Name="_layoutPanel" Orientation="Horizontal">

                    <xcad:LayoutDocumentPaneGroup x:Name="_Avalon_LayoutDocumentPaneGroup">
                        <xcad:LayoutDocumentPane x:Name="_Avalon_Views">

                            <!--Affichage Video/Camera-->
                            <xcad:LayoutAnchorable ContentId="camera" Title="Camera" CanClose="False" CanHide="True">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Image Grid.Row="0" Source="{Binding _image, UpdateSourceTrigger=PropertyChanged}"
                                     Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant"
                                           MouseDown="Display_MouseDown"
                                           />

                                    <Slider Grid.Row="0" VerticalAlignment="Bottom" 
                                            Minimum="1"
                                            Maximum="{Binding _videoTotalFrames, UpdateSourceTrigger=PropertyChanged}"
                                            Value="{Binding _videoPositionFrame, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


                                    <ListBox Grid.Row="1" x:Name="_lbx_rois"/>
                                </Grid>

                            </xcad:LayoutAnchorable>

                            <!--Sensors list-->
                            <xcad:LayoutAnchorable ContentId="sensors" Title="Sensors" CanClose="False" CanHide="True">
                                <!--Sensor's values-->
                                <ListView ItemsSource="{Binding _sensors_uc}" x:Name="lv_sensors" KeyDown="_roi_sensor_KeyPress"         />
                            </xcad:LayoutAnchorable>

                            <!--Scans-->
                            <xcad:LayoutAnchorable ContentId="scans" Title="Scans" CanClose="False" CanHide="True">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

                                        <Image Margin="5" Source="/Images/new.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                           MouseDown="ScansReset_Click" ToolTip="Clear scans"/>


                                        <TextBlock Text="Store in HMI :" VerticalAlignment="Center"/>

                                        <Grid Margin="5">
                                            <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _store_scans, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
MouseDown="Store_scans_Switch_Click"/>
                                            <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _store_scans, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
MouseDown="Store_scans_Switch_Click"/>
                                        </Grid>


                                        <TextBlock Text="Focus on last :" VerticalAlignment="Center"/>

                                        <Grid Margin="5">
                                            <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _scan_focus_last, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
MouseDown="Scan_focus_last_Switch_Click"/>
                                            <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _scan_focus_last, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
MouseDown="Scan_focus_last_Switch_Click"/>
                                        </Grid>

                                        <Image Margin="5" Source="/Images/save2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Scan_Save_Click" ToolTip="Save to one image"/>

                                    </StackPanel>

                                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto">
                                        <ListBox ItemsSource="{Binding _scans}" Name="_lbx_scans" SelectedItem="{Binding _scan_last}" >
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel IsItemsHost="True" />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                        </ListBox>
                                    </ScrollViewer>
                                </Grid>
                            </xcad:LayoutAnchorable>

                            <!--Scan live = f(t)-->
                            <xcad:LayoutAnchorable ContentId="scan realtime" Title="Scan = f(t)" CanClose="False" CanHide="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!--Menu scan live-->
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Grid Margin="5">
                                            <Image Source="/Images/Lecture.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                 Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
                             MouseDown="btn_play_Click"/>
                                            <Image Source="/Images/Pause.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                                 Visibility="{Binding _play, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
                             MouseDown="btn_pause_Click"/>
                                        </Grid>

                                        <Image Margin="5" Source="/Images/save2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Sensors_Save_Click" ToolTip="Save"/>

                                        <Image Margin="5" Source="/Images/load2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
                       MouseDown="Sensors_Load_Click" ToolTip="Load"/>

                                        <TextBlock Text="Save each mini-scan" VerticalAlignment="Center"/>
                                        <Grid Margin="5">
                                            <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _scan_save, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
MouseDown="Scan_save_Switch_Click"/>
                                            <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
    Visibility="{Binding _scan_save, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
MouseDown="Scan_save_Switch_Click"/>
                                        </Grid>
                                    </StackPanel>

                                    <Image Grid.Row="1" Height="{Binding _scans_height, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" HorizontalAlignment="Left" 
                                           Source="{Binding _image3, UpdateSourceTrigger=PropertyChanged}" 
                                           Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                </Grid>

                            </xcad:LayoutAnchorable>

                            <!--Graph 1-->
                            <xcad:LayoutAnchorable ContentId="Intensity" Title="I = f(H)" CanClose="False" CanHide="True">
                                <Grid>
                                    <local:Graph x:Name="_graph1"/>
                                </Grid>
                            </xcad:LayoutAnchorable>

                            <!--Graph 2-->
                            <xcad:LayoutAnchorable ContentId="H" Title="H = f(t)" CanClose="False" CanHide="True">
                                <Grid>
                                    <local:Graph_H_ft x:Name="_graph2"/>

                                    <Grid Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Image Source="/Images/toggle_off2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _Graph_H_ft_enabled, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"
          MouseDown="Graph_H_ft_enabled_Click"/>
                                        <Image Source="/Images/toggle_on2.png" Width="30" RenderOptions.BitmapScalingMode="Fant"
              Visibility="{Binding _Graph_H_ft_enabled, Converter={StaticResource _Converter}, ConverterParameter=Normal}"
          MouseDown="Graph_H_ft_enabled_Click"/>
                                    </Grid>
                                </Grid>
                            </xcad:LayoutAnchorable>

                        </xcad:LayoutDocumentPane>
                    </xcad:LayoutDocumentPaneGroup>

                </xcad:LayoutPanel>
            </xcad:LayoutRoot>
        </xcad:DockingManager>
    </Grid>

</Window>
