<UserControl x:Class="MesureAmpouleADecanter_ScannerFibre.Sensor_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesureAmpouleADecanter_ScannerFibre"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation ="Horizontal">
        <TextBlock x:Name="_tbk_index" Text="{Binding index}" />
        <TextBlock x:Name="_tbk" Text="  " Background="{Binding color}"/>
        <Grid Width="100">
            <ProgressBar MinHeight="0" Maximum="1" Value="{Binding intensity}"/>
            <TextBlock x:Name="_tbk_val" HorizontalAlignment="Center"/>
        </Grid>
    </StackPanel>
</UserControl>
