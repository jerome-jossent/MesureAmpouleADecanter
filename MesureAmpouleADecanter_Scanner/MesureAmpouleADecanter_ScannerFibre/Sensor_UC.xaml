<UserControl x:Class="MesureAmpouleADecanter_ScannerFibre.Sensor_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesureAmpouleADecanter_ScannerFibre"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200"
             Height="25">
    <StackPanel Orientation ="Horizontal" Height="20" >
        <TextBlock x:Name="_tbk_index" Text="{Binding _index}" Width="25" TextAlignment="Right" VerticalAlignment="Center" />
        <TextBlock x:Name="_tbk" Text="  " Background="{Binding _color}"/>
        <ProgressBar Width="40" Height="10" Minimum="{Binding _intensity_min}" Maximum="{Binding _intensity_max}" Value="{Binding _intensity}"/>
        <TextBlock x:Name="_tbk_val" Margin="3,0" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding _ON}" Width="36" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
