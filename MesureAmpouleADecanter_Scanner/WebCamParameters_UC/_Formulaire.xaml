<UserControl x:Class="WebCamParameters_UC._Formulaire"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebCamParameters_UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <ComboBox Grid.Row="0" 
                x:Name="_cbx_devices"  SelectionChanged="_cbx_devices_SelectionChanged"                 
                Height="28" VerticalContentAlignment="Center" Width="199"   Margin="10" 
                VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" x:Name="_sp" Margin="10" />

        <TextBlock Grid.Row="2" x:Name="_tbk" Margin="0,14,10,10" HorizontalAlignment="Right" Width="390"/>
        
    </Grid>
</UserControl>
