<Window x:Class="MultiCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <local:Capture_UC Grid.Row="0" x:Name="CAPTURE1"/>
        <local:Capture_UC Grid.Row="1" x:Name="CAPTURE2"/>
        <local:Capture_UC Grid.Row="2" x:Name="CAPTURE3"/>

        <StackPanel Grid.Column="1" Width="200" >
            <Slider Value="{Binding epaisseur}" Minimum="1" Maximum="20" />
            <CheckBox Content="Save to disk" IsChecked="{Binding toSave}"/>
        </StackPanel>
    </Grid>
</Window>
